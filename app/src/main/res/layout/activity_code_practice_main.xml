<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".practice.CodePracticeMainActivity">
   <Button
       android:id="@+id/btnDice"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="DICE Roller"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       android:layout_marginTop="@dimen/_20sdp"
       android:layout_marginLeft="@dimen/_4sdp" />


   <Button
       android:id="@+id/btnColor"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Color Game"
       app:layout_constraintStart_toEndOf="@id/btnDice"
       app:layout_constraintTop_toTopOf="parent"
       android:layout_marginTop="@dimen/_20sdp"
       android:layout_marginLeft="@dimen/_4sdp" />
   <Button
       android:id="@+id/btnCalculator"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Calculator"
       app:layout_constraintTop_toBottomOf="@id/btnDice"
       android:layout_marginTop="@dimen/_20sdp"
       app:layout_constraintStart_toStartOf="parent"
       android:layout_marginLeft="@dimen/_10sdp" />




</androidx.constraintlayout.widget.ConstraintLayout>